datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum OAuthProvider {
    Twitch
}

enum Permission {
    DeleteOtherUserPost
    BanUser
    CreateRole
    GetOtherUserEmail
    AssignRole
}

model Role {
    id Int @id @default(autoincrement())
    name String @unique
    permissions Permission[]
    protected Boolean @default(false)
    users User[]
}

model Ban {
    id Int @id @default(autoincrement())
    userId Int @unique
    user User @relation(fields: [userId], references: [id])
    authorId Int
    author User @relation("issuedBans", fields: [authorId], references: [id])
    reason String
    date DateTime
}

model User {
    id Int @id @default(autoincrement())
    email String? @unique
    username String @unique
    password String?
    twitchId String? @unique
    roleId Int @default(1)
    role Role @relation(fields: [roleId], references: [id])
    ban Ban?
    issuedBans Ban[] @relation("issuedBans")
    registrationDate DateTime
    avatar String?
    linkingTokens LinkingToken[]
    unlinkingTokens UnlinkingToken[]
    refreshTokens RefreshToken[]
    emailUpdateToken EmailUpdateToken?
    passwordResetToken PasswordResetToken?
    posts Post[]
}

model RegistrationToken {
    id Int @id @default(autoincrement())
    token String @unique
    email String @unique
    username String @unique
    password String
    creationDate DateTime
}

model OAuthRegistrationToken {
    id Int @id @default(autoincrement())
    token String @unique
    provider OAuthProvider
    providerUserId String
    creationDate DateTime
}

model LinkingToken {
    id Int @id @default(autoincrement())
    token String @unique
    email String @unique
    userId Int @unique
    user User @relation(fields: [userId], references: [id])
    creationDate DateTime
}

model UnlinkingToken {
    id Int @id @default(autoincrement())
    token String @unique
    userId Int @unique
    user User @relation(fields: [userId], references: [id])
    creationDate DateTime
}

model RefreshToken {
    id Int @id @default(autoincrement())
    token String @unique
    userId Int
    user User @relation(fields: [userId], references: [id])
    creationDate DateTime
}

model EmailUpdateToken {
    id Int @id @default(autoincrement())
    tokenFrom String @unique
    tokenTo String @unique
    email String @unique
    userId Int @unique
    user User @relation(fields: [userId], references: [id])
    creationDate DateTime
}

model PasswordResetToken {
    id Int @id @default(autoincrement())
    token String @unique
    userId Int @unique
    user User @relation(fields: [userId], references: [id])
    creationDate DateTime
}

model Post {
    id Int @id @default(autoincrement())
    title String
    content String
    authorId Int?
    author User? @relation(fields: [authorId], references: [id])
    creationDate DateTime
    editingDate DateTime?
}
