{
    "name": "svelte-kit-website-starter",
    "private": true,
    "scripts": {
        "validate": "pnpm --parallel validate",
        "commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint --fix",
        "stylelint:all": "pnpm stylelint \"**/*.svelte\" \"!storage\"",
        "stylelint:fix:all": "pnpm stylelint:all --fix",
        "eslint": "eslint --color --no-error-on-unmatched-pattern",
        "eslint:fix": "pnpm eslint --fix",
        "eslint:all": "pnpm eslint \"**/*.{md,json,y?(a)ml,js,ts,svelte}\"",
        "eslint:fix:all": "pnpm eslint:all --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.js"
        }
    },
    "lint-staged": {
        "*.svelte": "pnpm stylelint:fix",
        "*.{md,json,y?(a)ml,js,ts,svelte}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.js",
    "stylelint": {
        "extends": "./configs/stylelint/index.js",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.js",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "/storage",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.20.1",
        "@citrus-linting/prettier-config": "0.5.0",
        "@citrus-linting/stylelint-config": "0.5.3",
        "@commitlint/cli": "17.6.3",
        "@types/eslint": "8.40.0",
        "@types/prettier": "2.7.2",
        "@typescript-eslint/eslint-plugin": "5.59.7",
        "@typescript-eslint/parser": "5.59.7",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.3.0",
        "cz-customizable": "7.0.0",
        "eslint": "8.41.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-svelte": "2.29.0",
        "husky": "8.0.3",
        "lint-staged": "13.2.2",
        "postcss-html": "1.5.0",
        "prettier": "2.8.8",
        "prettier-plugin-svelte": "2.10.0",
        "stylelint": "15.6.2",
        "stylelint-prettier": "3.0.0",
        "svelte": "3.59.1",
        "svelte-eslint-parser": "0.29.0",
        "typescript": "5.0.4"
    }
}
